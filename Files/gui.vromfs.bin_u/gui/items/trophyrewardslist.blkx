{
  "root": {
    "background-color": "@modalShadeColor",
    "type": "big",
    "frame": {
      "width": "1@itemWidth + 2@itemSpacing + 1@blockInterval + 1@itemInfoWidth + 2@framePadding",
      "pos": "50%pw-50%w, 50%ph-50%h",
      "position": "absolute",
      "class": "wnd",
      "frame_header": {
        "activeText": {
          "id": "title",
          "text": "#mainmenu/rewardsList",
          "caption": "yes"
        },
        "Button_close": {
          "id": "btn_back"
        }
      },
      "tdiv": [
        {
          "id": "trophy_rewards_list"
        },
        {
          "width": "pw"
        },
        {
          "height": "4@itemHeight+ 5@itemSpacing + 2@framePadding"
        },
        {
          "max-height": "1@maxWindowHeight"
        },
        {
          "frameBlock": {
            "id": "items_list",
            "width": "1@itemWidth + 2@itemSpacing",
            "flow": "vertical",
            "overflow-y": "auto",
            "itemShopList": "yes",
            "behavior": "posNavigator",
            "navigatorShortcuts": "yes",
            "moveX": "closest",
            "moveY": "linear",
            "clearOnFocusLost": "no",
            "total-input-transparent": "yes",
            "on_select": "updateItemInfo"
          }
        },
        {
          "frameBlock": {
            "size": "fw, ph",
            "pos": "1@blockInterval, 0",
            "position": "relative",
            "padding": "0.01@scrn_tgt",
            "overflow-y": "auto",
            "scrollbarShortcuts": "yes",
            "tdiv": [
              {
                "id": "item_info"
              },
              {
                "width": "pw"
              },
              {
                "display": "hide"
              },
              {
                "flow": "vertical"
              },
              {
                "tdiv": {
                  "width": "pw",
                  "textAreaCentered": {
                    "id": "item_name",
                    "max-width": "pw",
                    "overlayTextColor": "active",
                    "pos": "50%pw-50%w, 50%ph-50%h",
                    "position": "relative"
                  },
                  "cardImg": {
                    "id": "item_type_help",
                    "margin-left": "5@dp",
                    "type": "tiny",
                    "background-image": "#ui/gameuiskin#btn_help.svg",
                    "tooltip": "",
                    "display": "hide"
                  }
                }
              },
              {
                "textAreaCentered": {
                  "id": "item_desc_under_title",
                  "max-width": "pw",
                  "overlayTextColor": "active",
                  "pos": "50%pw-50%w, 0",
                  "position": "relative",
                  "padding-bottom": "1@blockInterval"
                }
              },
              {
                "itemIconBlock": {
                  "id": "item_icon",
                  "pos": "50%pw-50%w, 0",
                  "position": "relative",
                  "doubleSize": "yes",
                  "wideSize": "no",
                  "overflow": "hidden"
                }
              },
              {
                "textareaNoTab": {
                  "id": "item_desc",
                  "position": "relative",
                  "width": "pw",
                  "font-bold": "@fontMedium",
                  "padding-top": "1@blockInterval"
                }
              },
              {
                "div": {
                  "id": "item_desc_div",
                  "width": "pw",
                  "flow": "vertical"
                }
              },
              {
                "textareaNoTab": {
                  "id": "item_desc_under_div",
                  "pos": "50%pw-50%w, 12@sf/@pf",
                  "position": "relative",
                  "width": "pw",
                  "smallFont": "yes",
                  "hideEmptyText": "yes"
                }
              },
              {
                "div": [
                  {
                    "width": "pw"
                  },
                  {
                    "pos": "50%pw-50%w, 0"
                  },
                  {
                    "position": "relative"
                  },
                  {
                    "flow": "vertical"
                  },
                  {
                    "padding": "0.02@sf, 0.01@scrn_tgt"
                  },
                  {
                    "textareaNoTab": {
                      "id": "item_desc_above_table",
                      "width": "pw",
                      "text": ""
                    }
                  },
                  {
                    "div": {
                      "id": "item_table_container",
                      "width": "pw"
                    }
                  },
                  {
                    "textareaNoTab": {
                      "id": "item_desc_under_table",
                      "width": "pw",
                      "font-bold": "@fontMedium",
                      "text": ""
                    }
                  }
                ]
              }
            ],
            "textareaNoTab": {
              "id": "item_info_text",
              "width": "pw",
              "display": "hide"
            }
          }
        }
      ]
    }
  }
}