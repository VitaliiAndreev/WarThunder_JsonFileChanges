{
  "tdiv": [
    {
      "width": "pw"
    },
    {
      "pos": "0.5pw-0.5w, 0.5ph-0.5h"
    },
    {
      "max-height": "@bigOptionsHeight"
    },
    {
      "flow": "vertical"
    },
    {
      "optionsBoxRightScroll": {
        "id": "voiceOptions"
      }
    },
    {
      "tdiv": [
        {
          "id": "ptt_buttons_block"
        },
        {
          "width": "pw"
        },
        {
          "flow": "vertical"
        },
        {
          "display": "hide"
        },
        {
          "tdiv": [
            {
              "width": "pw"
            },
            {
              "td": {
                "cellType": "left",
                "width": "0.5pw",
                "optiontext": {
                  "text": "#options/ptt_shortcut"
                }
              }
            },
            {
              "td": {
                "cellType": "right",
                "width": "0.5pw",
                "padding-left": "@optPad",
                "Button_text": {
                  "_on_click": "onAssignVoiceButton",
                  "tooltip": "#guiHints/ptt_shortcut",
                  "textarea": {
                    "id": "ptt_shortcut",
                    "voiceShortcut": "yes",
                    "pos": "0, 0.5ph-0.5h",
                    "position": "relative",
                    "min-width": "@buttonWidth-@buttonTextPadding",
                    "input-transparent": "yes",
                    "text-align": "center",
                    "text": ""
                  }
                }
              }
            }
          ]
        },
        {
          "tdiv": [
            {
              "width": "pw"
            },
            {
              "padding-top": "0.005@sf"
            },
            {
              "td": {
                "cellType": "left",
                "width": "0.5pw"
              }
            },
            {
              "td": {
                "cellType": "right",
                "width": "0.5pw",
                "padding-left": "@optPad",
                "Button_text": {
                  "_on_click": "onClearVoiceButton",
                  "text": "#mainmenu/btnReset",
                  "tooltip": "#guiHints/ptt_shortcut_reset"
                }
              }
            }
          ]
        }
      ]
    },
    {
      "tdiv": [
        {
          "width": "pw"
        },
        {
          "padding-top": "0.005@sf"
        },
        {
          "td": {
            "cellType": "left",
            "width": "0.5pw"
          }
        },
        {
          "td": {
            "cellType": "right",
            "width": "0.5pw",
            "padding-left": "@optPad",
            "Button_text": {
              "id": "joinEchoButton",
              "text": "#options/joinEcho",
              "tooltip": "#guiHints/joinEcho",
              "_on_click": "onEchoTestButton"
            }
          }
        }
      ]
    }
  ]
}