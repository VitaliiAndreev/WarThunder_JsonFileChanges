{
  "img": {
    "position": "absolute",
    "size": "3sw, sh/3+1",
    "pos": "-sw,sh-h-1@bh",
    "background-image": "#ui/gameuiskin#optionlist_background_down"
  },
  "root": {
    "flow": "vertical",
    "background-color": "@shadeBackgroundColor",
    "type": "big",
    "generic_options": {
      "id": "mission_box",
      "width": "sw",
      "height": "sh",
      "position": "absolute",
      "type": "big",
      "titletext": {
        "id": "mission_title"
      },
      "optionlist_container": {
        "overflow": "hidden",
        "textarea": {
          "id": "mission_desc",
          "pos": "50%pw-50%w,0",
          "position": "relative",
          "width": "90%pw",
          "height": "fh",
          "padding": "1*@scrn_tgt/100.0",
          "overflow-y": "auto"
        },
        "_newline": [],
        "autosize": {
          "id": "optionslist",
          "display": "none",
          "position": "relative",
          "pos": "50%pw-50%w,0",
          "width": "pw",
          "height": "3*@baseTrHeight"
        }
      },
      "navBar": []
    }
  }
}